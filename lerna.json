{
  "packages": [
    "packages/*",
    "packages/Atoms/*",
    "packages/Core/*",
    "packages/Molecules/*",
    "packages/Elements/*",
    "packages/Utilities/*",
    "documentation"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "registry": "https://registry.npmjs.org/",
  "command": {
    "version": { "exact": true },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/stories/**", "**/__tests__/**"],
      "allowBranch": "master"
    }
  }
}
