  "keywords": [
    "design",
    "system",
    "components",
    "react",
    "numl",
    "uikit"
  ],
  "author": "Numl.Design Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/numldesign/numl-react/issues"
  },
  "homepage": "https://github.com/numldesign/numl-react#readme",
  "husky": {
