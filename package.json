    "@types/react-dom": "^17.0.2",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.6.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jsx-native-events": "^2.0.0",
