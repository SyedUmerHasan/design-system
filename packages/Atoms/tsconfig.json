    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["./**/stories/*", "vite.config.ts", "./**/vite.config.ts"],
  "include": [
    "./index.ts",
    "./Avatar",
    "./Badge",
    "./Button",
    "./Checkbox",
    "./Chip",
    "./ExceptionList",
    "./FooterHelp",
    "./Icon",
    "./Link",
    "./MessageError",
    "./Pagination",
    "./ProgressBar",
    "./Radio",
    "./RangeSlider",
    "./Switch",
    "./Tag",
    "./TextInput",
    "./Thumbnail"
  ]
